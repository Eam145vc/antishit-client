<Window x:Class="AntiCheatClient.UI.Windows.MainOverlay"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Anti-Cheat Monitor" 
        Height="50" 
        Width="250"
        WindowStyle="None"
        ResizeMode="NoResize"
        AllowsTransparency="True"
        Background="#99000000"
        Topmost="True"
        ShowInTaskbar="False">
    <Window.Resources>
        <Style x:Key="ScreenshotButton" TargetType="Button">
            <Setter Property="Background" Value="#3F51B5"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}" 
                                CornerRadius="4" 
                                Padding="8,4">
                            <ContentPresenter HorizontalAlignment="Center" 
                                             VerticalAlignment="Center"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#303F9F"/>
                </Trigger>
                <Trigger Property="IsPressed" Value="True">
                    <Setter Property="Background" Value="#1A237E"/>
                </Trigger>
            </Style.Triggers>
        </Style>
    </Window.Resources>

    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="Auto"/>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="Auto"/>
        </Grid.ColumnDefinitions>

        <!-- Indicador de estado -->
        <Ellipse x:Name="statusIndicator" 
                 Grid.Column="0"
                 Width="15" 
                 Height="15"
                 Fill="Red"
                 Margin="15,0,5,0"/>

        <!-- Botón de captura de pantalla -->
        <Button x:Name="btnScreenshot" 
                Grid.Column="1"
                Content="Capturar pantalla" 
                Style="{StaticResource ScreenshotButton}"
                Click="BtnScreenshot_Click"
                Margin="10,0"/>

        <!-- Botón de cerrar -->
        <Button x:Name="btnClose" 
                Grid.Column="2"
                Content="✕" 
                Foreground="White"
                Background="Transparent"
                BorderThickness="0"
                Width="20"
                Height="20"
                Click="BtnClose_Click"
                Margin="5,0,15,0"/>
    </Grid>
</Window>